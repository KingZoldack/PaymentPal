<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PaymentPal"
             x:Class="PaymentPal.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="headingFontColor">#16F4D0</Color>
            <Color x:Key="subHeadingFontColor">#7F7B8C</Color>
            <Color x:Key="fontColor">#B5BAD0</Color>
            <Color x:Key="containerColor">#413C58</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
